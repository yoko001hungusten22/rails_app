<%= render 'shared/book_error_messages' %>
<div class="top">
  <p>本更新ページ</p>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @book, local: true) do |f| %>
      <%= f.label :name, "名前" %>
      <%= f.text_field :name %>
      <%= f.label :description, "説明" %>
      <%= f.text_field :description %>
      <%= f.submit "本の情報を更新", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>